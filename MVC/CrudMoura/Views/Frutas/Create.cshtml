
@model Crudmoura.Models.Frutas


<h1>Cadastro de Fruta</h1>

<form asp-action="SalvarFruta" method="post">
<label asp-for="Nome">Nome da Fruta</label>
<input asp-for="Nome" class="form-control">

<br>
<label asp-for="Preco">Preco</label>
<input asp-for="Preco" class="form-control">

<br>
<label asp-for="Quantidade">Quantidade</label>
<input asp-for="Quantidade" class="form-control">


<br>
<label asp-for="Categoria">Categoria</label>
<input asp-type="Categoria" class="form-control">

<br><br>
<button class="btn btn-sucess">Cadastrar Fruta</button>

</form>
